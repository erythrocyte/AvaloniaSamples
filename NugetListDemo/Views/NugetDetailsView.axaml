<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:NugetListDemo.Views" x:Class="NugetListDemo.Views.NugetDetailsView" Width="900" Height="500" Title="{Binding Title}">

        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image x:Name="iconImage" Margin="6" Width="64" Height="64" HorizontalAlignment="Center" VerticalAlignment="Center"
                Content="{Binding IconUrl}"/>
                <TextBlock Grid.Column="1" TextWrapping="WrapWithOverflow" Margin="6" VerticalAlignment="Center">
                        <TextBox FontSize="14" FontWeight="SemiBold" x:Name="titleRun" Content="{Binding Title}"/>
                        <LineBreak />
                        <TextBox FontSize="12" x:Name="descriptionRun" Content="{Binding Description}"/>
                        <LineBreak />
                        <Hyperlink x:Name="openButton" Command = "{Binding OpenPageCommand}" >Open</Hyperlink>
                </TextBlock>
        </Grid>
</Window>
