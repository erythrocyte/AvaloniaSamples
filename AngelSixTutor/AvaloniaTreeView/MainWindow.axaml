<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaTreeView.MainWindow"
        Opened="TopLevel_OnOpened"
        Title="AvaloniaTreeView">
    
    <Grid>
        <TreeView x:Name="FolderView">
            <TreeView.Styles>
                <Style Selector="TreeViewItem">
                    <Setter Property="Template">
                        <ControlTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="avares://images/smallclock.png" Width="16" Margin="3"></Image>
                                <TextBlock VerticalAlignment="Center" Text="{Binding}"></TextBlock>
                            </StackPanel>                
                        </ControlTemplate>
                    </Setter>
                </Style>
                
